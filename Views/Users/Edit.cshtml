@model ProfileFormViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<form asp-action="Edit" method="post">
   <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="FistName"></label>
        <input asp-for="FistName" class="form-control" maxlength="100" />
        <span asp-validation-for="FistName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" maxlength="100" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" maxlength="100" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary d-block mt-4">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
